    <link rel="shortcut icon" href="Images/favicon.webp" type="image/x-icon">
    <!-- css attached -->
    <link rel="stylesheet" href="css/fonts.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/max-media.css">
    <link rel="stylesheet" href="css/all.min.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- title -->
    <title>Movies 4U</title>
</head>

<body>
    <header>
        <div class="container">
            <div class="row items-center">
                <div class="col-2">
                    <div class="logo">
                        <a href="index.html">Movie Chill</a>
                    </div>
                </div>
                <div class="col-8">
                    <nav>
                        <ul class="justify-center">
                            <li>
                                <a href="#">Welcome</a>
                            </li>
                            <li>
                                <a href="#">Movies</a>
                            </li>
                            <li>
                                <a href="#">Live Tv</a>
                            </li>
                            <li>
                                <a href="#">My Favorite</a>
                            </li>
                            <li>
                                <a href="#">About</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <div class="col-2 profile ">
                    <a href="/addMovie"
                        class="btn btn-primary btn-sm text-white mx-2 my-2 float-right text-lg text-center justify-center flex">
                        Add Movie
                    </a>
                </div>
            </div>
        </div>
    </header>
    <main>
        <%data.forEach((movie)=>{ %>
            <div class="">
                <div class="w-4/12 mb-4 mx-8 flex-wrap">
                    <!-- component -->
                    <div class="flex flex-col justify-center sm:pt-12">

                        <div class="py-3 sm:max-w-xl sm:mx-auto w-full">
                            <div
                                class="bg-white shadow-lg border-gray-100 max-h-80	 border sm:rounded-3xl p-8 flex space-x-8">
                                <div class="h-48 overflow-visible w-6/12">
                                    <img class="rounded-3xl shadow-lg" src="<%=movie.path%>" alt="<%=movie.moviename%>">
                                </div>
                                <div class="flex flex-col w-6/12 space-y-4">
                                    <div class="flex justify-between items-start">
                                        <h2 class="text-3xl font-bold text-black">
                                            <%=movie.moviename%>
                                        </h2>
                                        <div class="bg-yellow-400 font-bold rounded-xl p-2 text-black">
                                            <%=movie.rating%>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="text-sm text-gray-400">Languages</div>
                                        <div class="text-lg text-black">
                                            <%=movie.languages%>
                                        </div>
                                    </div>
                                    <p class=" text-gray-400 max-h-40 overflow-y-hidden text-gray-800">
                                        <%=movie.description%>
                                    </p>
                                    <div class="flex text-2xl font-bold text-black">
                                        <%=movie.quality%>
                                    </div>
                                    <div class="button">
                                        <a href="/editMovie/<%=movie._id%>"
                                            class="bg-blue-500 text-white p-2 rounded hover:bg-blue-400 duration-300">Edit</a>
                                        <a href="/deleteMovie/<%=movie._id%>"
                                            class="bg-red-500 text-white p-2 rounded ml-2 hover:bg-red-400 duration-300">Delete</a>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <%})%>
    </main>
